<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.blockchain.commet.view.fragment.conversation.ConversationFragment" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parent_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/backk" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/users"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_margin="@dimen/_5sdp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:fontFamily="@font/yekan_bakh_medium"
                            android:gravity="center_vertical"
                            android:minHeight="?attr/actionBarSize"
                            android:text="sol ..."
                            android:textColor="@color/black"
                            android:textIsSelectable="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imageView3" />

                        <ImageView
                            android:id="@+id/conversation_fragment_avatar"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:padding="5dp"
                            android:src="@drawable/user"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textViewName"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:fontFamily="@font/yekan_bakh_medium"
                            android:gravity="center_vertical"
                            android:minHeight="?attr/actionBarSize"
                            android:text=""
                            android:textColor="@color/black"
                            android:textIsSelectable="true"
                            app:layout_constraintBottom_toTopOf="@+id/textViewCounter"
                            app:layout_constraintStart_toEndOf="@+id/conversation_fragment_avatar" />

                        <TextView
                            android:id="@+id/textViewCounter"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:fontFamily="@font/yekan_bakh_medium"
                            android:gravity="center_vertical"
                            android:minHeight="?attr/actionBarSize"
                            android:text=" "
                            android:textColor="@color/black"
                            android:textIsSelectable="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/conversation_fragment_avatar" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="10dp"
                            android:rotation="180"
                            android:src="@drawable/menu"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/black" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.AppBarLayout>

            <TextView
                android:id="@+id/lbl_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:background="@drawable/lbl_start_chat"
                android:text="Created at 2024-02-04"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:visibility="@{model.vis==1?View.VISIBLE:View.GONE}"
                app:layout_constraintBottom_toTopOf="@+id/parent_message"
                app:layout_constraintTop_toBottomOf="@+id/lbl_create"
                tools:listitem="@layout/row_message" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yekan_bakh_bold"
                android:text="@{model.vis==4?@string/write_message:model.vis==2?@string/error_connection:@string/empty}"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/appCompatButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/oxygen_button_shape_blue_round"
                android:fontFamily="@font/yekan_bakh_medium"
                android:text="@string/retry"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progressBar" />



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/parent_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:paddingLeft="8dp"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/send"
                    android:layout_width="?android:actionBarSize"
                    android:layout_height="?android:actionBarSize"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:padding="16dp"
                    android:src="@drawable/send"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/emoji_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:layout_margin="5dp"
                    android:src="@drawable/baseline_emoji_emotions_24"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/pick_btn"
                    android:layout_width="?android:actionBarSize"
                    android:layout_height="?android:actionBarSize"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:padding="16dp"
                    android:src="@drawable/baseline_attach_file_24"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/send"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/send"
                    app:layout_constraintEnd_toEndOf="@+id/send"
                    app:layout_constraintStart_toStartOf="@+id/send"
                    app:layout_constraintTop_toTopOf="@+id/parent_message" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/message"
                    android:layout_width="0dp"
                    android:layout_height="?android:actionBarSize"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@drawable/edit_text_with_white_border"
                    android:fontFamily="@font/yekan_bakh_medium"
                    android:hint="Message ..."
                    android:inputType="textShortMessage"
                    android:maxLength="999999999"
                    android:padding="@dimen/_2sdp"
                    app:layout_constraintEnd_toStartOf="@+id/pick_btn"
                    app:layout_constraintStart_toEndOf="@+id/emoji_btn"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.emoji2.emojipicker.EmojiPickerView
                    android:id="@+id/emoji_picker"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:emojiGridColumns="9"
                    app:layout_constraintTop_toBottomOf="@+id/message"
                    tools:layout_editor_absoluteX="8dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parent_first_conversation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/loading"
                style="@style/SpinKitView.CubeGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:SpinKit_Color="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:text="please wait, creating conversation"
                android:fontFamily="@font/yekan_bakh_bold"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/disabled"
                app:layout_constraintTop_toBottomOf="@+id/loading" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>