<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#FFF"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/communication"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yekan_bakh_medium"
            android:gravity="center"
            android:padding="10dp"
            android:text="Commet"
            android:textColor="#111"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yekan_bakh_medium"
            android:gravity="center"
            android:padding="5dp"
            android:text="Remember your private_key value for next time!"
            android:textColor="#111"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/show_phrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="20dp"
            android:text=""
            android:background="@color/white"
            android:hint="@string/enter_your_12_phrase"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/show_private"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="20dp"
            android:text=""
            android:hint="@string/enter_your_private_key"
            android:background="@color/white"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="#403E3E"
            android:orientation="horizontal"
            android:padding="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="10dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/cotinue"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="16dp"
            android:fontFamily="@font/yekan_bakh_medium"
            android:text="login"
            app:backgroundTint="#00c4b4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_text_input" />

