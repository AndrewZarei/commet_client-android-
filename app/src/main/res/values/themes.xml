<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorButtonNormal">@color/button_color</item>
        <item name="fontFamily">@font/yekan_bakh_medium</item>
    </style>

    <style name="Button.Oxygen">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/button_color_oxygen_blue</item>
        <item name="android:background">@drawable/oxygen_button_shape</item>
        <item name="colorButtonNormal">@color/button_color_oxygen_blue</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button.OxygenBlueRound">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/button_color_oxygen_dark</item>
        <item name="android:background">@drawable/oxygen_button_shape_blue_round</item>
        <item name="colorButtonNormal">@color/button_color_oxygen_blue</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button.OxygenBlue">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/button_color_oxygen_dark</item>
        <item name="android:background">@drawable/oxygen_button_shape_blue</item>
        <item name="colorButtonNormal">@color/button_color_oxygen_blue</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.MinWidth">
        <item name="android:windowBackground">@drawable/dialog2</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="fontFamily">@font/yekan_bakh_medium</item>
        <item name="android:windowTitleStyle">@style/windowTitleStyle</item>
        <item name="android:textColorPrimary">@color/blackText</item>
        <item name="android:textColor">@color/blackText</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="windowTitleStyle">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/blackText</item>
    </style>

    // for button colors

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/blackText</item>
    </style>

    <style name="MyApplication.Fullscreen" parent="AppTheme">
        <item name="android:actionBarStyle">@style/Widget.MyApplication.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.MyApplication.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

</resources>